<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaApp.View.UserAdminPage"
             Title="UserAdminPage"
             xmlns:Models="clr-namespace:TriviaApp.Models"
             xmlns:vm="clr-namespace:TriviaApp.ViewModel"
             x:DataType="vm:UserAdminPageViewModel"
             >
    <VerticalStackLayout>
        <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
        <ScrollView Margin="10">
            <CollectionView x:Name="colview" ItemsSource="{Binding Users}" EmptyView ="אין מה לחפש פה:_(">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="4" Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                   
                </CollectionView>
        </ScrollView>
        </RefreshView>
    </VerticalStackLayout>
</ContentPage>